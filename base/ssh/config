##############################################################################
# Generic
##############################################################################

Host *
	CanonicalizeHostname yes
	CanonicalDomains local hotnudiegirls.com
	CanonicalizeMaxDots 0
	ServerAliveInterval 20
	ServerAliveCountMax 2
	# Speed up encryption
	Ciphers chacha20-poly1305@openssh.com,blowfish-cbc,aes128-cbc,aes128-ctr
	#Ciphers arcfour,blowfish-cbc,aes128-cbc
	#MACs umac-64@openssh.com,hmac-md5,hmac-sha1 # Insecure?
	MACs hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,hmac-ripemd160,hmac-sha1
	Compression yes
	ControlMaster auto
	ControlPersist yes
	ControlPath ~/.cache/ssh/control-sockets/remote-mux-%r@%h:%p
	HashKnownHosts no
	# Lookup IPv4 hostnames only
	AddressFamily inet
	UserKnownHostsFile ~/.cache/ssh/known_hosts
	SendEnv LANG LC_* TZ
