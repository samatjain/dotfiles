# Use XDG_CONFIG_HOME for configuration
alias irssi="irssi --home=$XDG_CONFIG_HOME/irssi"
alias synergys="synergys -c $XDG_CONFIG_HOME/synergy/synergy.conf"
alias tmux="tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf"

# mosh should be able to use IPv6
alias mosh="mosh --family=all"

alias gr="fgrep --color=auto"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

alias rgf="rg --hidden --no-ignore"

alias py2="python2"
alias py3="python3"

# Only useful when in a GUI env?
alias o="xdg-open"

# Parent directory aliases
alias ..="cd .."
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Better defaults
alias dd="dd status=progress "

# Increase number of file descriptors
alias ulimit-n-increase="ulimit -n $(dc -e '2 16 ^ p')"

# transmission
alias tsm=transmission-remote

alias ap=ansible-playbook
