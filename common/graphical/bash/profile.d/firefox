# Faster Firefox Javascript performance for Nightly, Aurora, and Beta
# See http://forums.mozillazine.org/viewtopic.php?f=23&t=1948595&p=13825877&hilit=environment#p13825877
export JSGC_DISABLE_POISONING=1

# Use xinput2
# See https://news.ycombinator.com/item?id=18974228
export MOZ_USE_XINPUT2=1

# Use WebRender
export MOZ_WEBRENDER=1

